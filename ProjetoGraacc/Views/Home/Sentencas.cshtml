@{
    ViewData["Title"] = "Sentenças";
}

<style>
    .iconFavorit:before {
        visibility: visible;
    }

    input[type=checkbox].iconFavorit {
        visibility: hidden;
    }
</style>

@section Breadcrumbs {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Home</li>
        <li class="breadcrumb-item active">Sentenças</li>
    </ol>
}

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="form-row">
                    <div class="form-group col-sm-1">
                        <label>UF:</label>
                        <select class="form-control">
                            <option value="ES">ES</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-3">
                        <label>Município:</label>
                        <select class="form-control">
                            <option value="">Selecione</option>
                            <option value="JERÔNIMO MONTEIRO">JERÔNIMO MONTEIRO</option>
                            <option value="PIÚMA">PIÚMA</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-4">
                        <label>Órgão:</label>
                        <select class="form-control">
                            <option value="">Selecione</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-2">
                        <label>Apenas Favoritos?</label>
                        <select class="form-control">
                            <option value="">Selecione</option>
                            <option value="S">SIM</option>
                        </select>
                    </div>
                    <div class="form-group col-sm-2">
                        <button type="submit" class="btn btn-block btn-primary active" style="margin-top: 28px;">Pesquisar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card card-accent-success">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Sentenças Abertas
            </div>
            <div class="card-body">
                <table class="table table-responsive-sm table-striped table-sm tbSentencasAbertas">
                    <thead>
                        <tr>
                            <th data-orderable="false"></th>
                            <th>Edital Nº</th>
                            <th>UF</th>
                            <th>Município</th>
                            <th>Órgão</th>
                            <th>Data de publicação</th>
                            <th width="10%" data-orderable="false"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="checkbox" class="iconFavorit fa fa-star-o font-xl" value="false" /></td>
                            <td>001/2019</td>
                            <td>ES</td>
                            <td>JERÔNIMO MONTEIRO</td>
                            <td>JERÔNIMO MONTEIRO - VARA ÚNICA</td>
                            <td>@DateTime.Now.ToShortDateString()</td>
                            <td>
                                <button type="button" class="btn btn-pill btn-block btn-secondary active" aria-pressed="true">Detalhar</button>
                            </td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="iconFavorit fa fa-star font-xl" style="color: #dcbd15;" value="true" /></td>
                            <td>022/2019</td>
                            <td>ES</td>
                            <td>PIÚMA</td>
                            <td>PIÚMA - 2ª VARA</td>
                            <td>15/04/2019</td>
                            <td>
                                <button type="button" class="btn btn-pill btn-block btn-secondary active" aria-pressed="true">Detalhar</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.col-->
</div>
<!--/.row-->

<div class="row">
    <div class="col-lg-12">
        <div class="card card-accent-danger">
            <div class="card-header">
                <i class="fa fa-align-justify"></i> Sentenças Finalizadas
            </div>
            <div class="card-body">
                <table class="table table-responsive-sm table-striped table-sm tbSentencasFinalizadas">
                    <thead>
                        <tr>
                            <th data-orderable="false"></th>
                            <th>Edital Nº</th>
                            <th>UF</th>
                            <th>Município</th>
                            <th>Órgão</th>
                            <th>Data de publicação</th>
                            <th width="10%" data-orderable="false"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="checkbox" class="iconFavorit fa fa-star-o font-xl" value="false" /></td>
                            <td>001/2019</td>
                            <td>ES</td>
                            <td>JERÔNIMO MONTEIRO</td>
                            <td>JERÔNIMO MONTEIRO - VARA ÚNICA</td>
                            <td>@DateTime.Now.ToShortDateString()</td>
                            <td>
                                <button type="button" class="btn btn-pill btn-block btn-secondary active" aria-pressed="true">Detalhar</button>
                            </td>
                        </tr>
                        <tr>
                            <td><input type="checkbox" class="iconFavorit fa fa-star-o font-xl" value="false" /></td>
                            <td>022/2019</td>
                            <td>ES</td>
                            <td>PIÚMA</td>
                            <td>PIÚMA - 2ª VARA</td>
                            <td>15/04/2019</td>
                            <td>
                                <button type="button" class="btn btn-pill btn-block btn-secondary active" aria-pressed="true">Detalhar</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.col-->
</div>
<!--/.row-->

@section Scripts{
    <script type="text/javascript">
        $('.tbSentencasAbertas').DataTable({
            "order": [[5, "asc"]]
        });

        $('.tbSentencasFinalizadas').DataTable({
            "order": [[4, "asc"]]
        });

        $('.iconFavorit').on('click', function () {
            var object = $(this).val();

            if (object == 'true') {
                $(this).removeClass('fa fa-star').addClass('fa fa-star-o').removeAttr('style');
                $(this).val(false);
            }
            else {
                $(this).removeClass('fa fa-star-o').addClass('fa fa-star').css('color', '#dcbd15');
                $(this).val(true);
            }
        });
    </script>
}